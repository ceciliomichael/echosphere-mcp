# AI Service Configuration
# Base URL for the AI API endpoint
AI_BASE_URL=https://api.example.com/v1

# API key for AI service authentication
AI_API_KEY=your_api_key_here

# Model name for chat/completion requests
AI_MODEL=gpt-4

# Model name for embedding generation
AI_EMBEDDING_MODEL=text-embedding-ada-002

# Debug mode - set to 'true' to enable verbose logging
DEBUG=false

# RAG Configuration
# Size of each text chunk in characters for embedding
RAG_CHUNK_SIZE=1000

# Number of overlapping characters between chunks
RAG_CHUNK_OVERLAP=200
